# Frontend Dockerfile
FROM node:18-alpine AS build
WORKDIR /app
COPY FamilyTreeApp/package*.json ./
RUN npm ci
COPY FamilyTreeApp/ ./
RUN npm run build -- --configuration production

FROM nginx:alpine
COPY --from=build /app/dist/family-tree-app/browser /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
